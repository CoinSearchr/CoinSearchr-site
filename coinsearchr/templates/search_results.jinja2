	<script src="{{ url_for('static', filename='js/search_results.js') }}"></script>

	<script>
		{% if trow is not none %}
			const top_coin_index = '{{ trow["id"] }}';
			make_top_chart(top_coin_index, 'usd', 7); // FIXME set the currency correctly (Issue #15)

		{% endif %}
	</script>


{% endblock %}

