<OpenSearchDescription xmlns="http://a9.com/-/spec/opensearch/1.1/"
                       xmlns:moz="http://www.mozilla.org/2006/browser/search/">
  <ShortName>CoinSearchr</ShortName>
  <Description>CoinSearchr - an easy-to-use cryptocurrency search engine</Description>
  <InputEncoding>[UTF-8]</InputEncoding>
  <Image width="16" height="16" type="image/x-icon">https://coinsearchr.com/favicon.ico</Image>
  <Url type="text/html" template="https://coinsearchr.com/search/">
    <Param name="q" value="{searchTerms}"/>
  </Url>
  <Url type="application/x-suggestions+json" rel="suggestions" template="https://coinsearchr.com/suggest">
    <Param name="q" value="{searchTerms}"/>
  </Url>
  <moz:SearchForm>https://coinsearchr.com/</moz:SearchForm>
</OpenSearchDescription>